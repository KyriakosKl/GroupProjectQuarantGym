<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<link rel="stylesheet" href="homecss.css">
<link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">


<style>
    @import url("https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,300&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Russo+One&display=swap");

    body {
        z-index: 0;
        position: relative;
    }

    /* chat */
    .chat-icon {
        height: 100vh;
        z-index: 2;
        position: fixed;
        right: 10%;
        top: 88%;
    }

    .circle {
        position: relative;
        background-color: #77b2d5;
        border-radius: 50%;
        animation: pulse-red 2s infinite;
        z-index: 3;
        height: 60px;
        width: 60px;
    }

    /* navbar */
    .image {
        z-index: 5;
        position: fixed;
        bottom: 0;
        right: 0;
        width: 58px;
    }

    .navbar-custom {
        background-color: black;
        height: 8rem;
        font-family: 'Russo One', sans-serif;
    }

    #mobileNav {
        z-index: 3;
        border-bottom-right-radius: 5px;
        border-bottom-left-radius: 5px;
    }

    .account {
        text-decoration: none;
        margin-top: 20px;
        color: white;
    }

    div ul li a {
        font-size: 1.2rem;
    }

    /* main picture */
    .max-height {
        min-height: calc(100vh - 128px);
        background: linear-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1)),
            url(/images/newhome.jpg)center/cover no-repeat fixed;
        background-position: top;
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

    .wrapper {
        z-index: 0;
    }

    .custom-text {
        width: 40%;
        margin-top: -15%;
        margin-left: 2%;
        color: honeydew;
        text-align: center;
        font-size: 36px;
        font-family: 'Permanent Marker', cursive;
    }

    /* about section */
    .custom-h5 {
        font-size: 0.2rem;
        font-family: 'Roboto', sans-serif;
        text-align: justify;
        line-height: 50px;

    }

    .title-underline {
        width: 100px;
        border: 2px solid #7160F8;
        margin: 0 auto;
        background-color: #7160F8;
    }

    .custom-h1 {
        font-family: 'Permanent Marker', cursive;
    }

    .about-picture {
        background:
            url(/images/iStock-1223133311.jpg)center/cover no-repeat;
        min-height: 60vh;
    }

    .aboutus {
        background-color: black;
    }

    .custom-about {
        background-color: black;
        margin: 5% 10%;
        display: flex;
        flex-direction: column;
    }

    /* trainings */

    .custom-button {
        width: 200px;
    }

    .training-picture {
        background: url(/images/iStock-1223133121.jpg)center/cover no-repeat;
        height: 60vh;
    }

    .custom-title {
        font-family: 'Permanent Marker', cursive;
    }

    .img-tr {
        border-radius: 5%;
    }

    .link {
        color: white;
    }

    /* banner */

    .container-promo {
        background-image: url(/images/promo-pic.jpg);
        background-size: cover;
        background-position: top;

        display: flex;
        justify-content: flex-start;
        width: 60%;
        height: 100%;
        margin: 0 auto;
    }

    .text-promo {
        font-size: 24px;
        color: white;
        text-align: center;
        margin: 50px 80px;
        z-index: 1;
        padding-bottom: 70px;
    }

    @media (max-width: 800px) {

        .container-promo {
            width: 100%;
            background-size: left;
        }

        .text-promo {
            font-size: 24px;
            color: white;
            text-align: center;
            margin: 70px 40px;
            z-index: 1;
        }
    }

    .title-promo {
        font-family: 'Russo One', sans-serif;
        font-size: 80px;
        color: rgb(241, 229, 112);
    }

    .text-2 {
        color: white;
        font-family: 'Source Sans Pro', sans-serif;
    }

    .btn-get-it {
        vertical-align: middle;
        display: inline-block;
        border-radius: 4px;
        background-color: transparent;
        border: solid 1px white;
        color: #FFFFFF;
        text-align: center;
        font-size: 28px;
        padding: 15px;
        width: 200px;
        transition: all 0.2s;
        cursor: pointer;
        margin: 5px;
        font-family: 'Russo One', sans-serif;
    }

    .btn-get-it:hover {
        border-color: #fbfafc;
        color: white;
        box-shadow: 0 0.5em 0.5em -0.4em #f1ff5c;
        transform: translateY(-0.25em);
        cursor: pointer;
        background-color: #7160F8;
    }

    /* footer */

    .h2title {
        font-family: 'Russo One', sans-serif;
    }

    .custom-contact {
        font-family: 'Permanent Marker', cursive;
    }

    #contact {
        background-color: black;
    }

    /* buttons */
    .btnseemore {
        background-color: #fff;
        color: rgba(166, 155, 251, 1);
        font-size: 24px;
        padding: 5px 20px;
        border-radius: 12px;
        border: 1.5px solid rgba(166, 155, 251, 1);
        transition: 0.3s ease-in-out;
    }

    .btnseemore:hover {
        color: white;
        background-color: rgba(166, 155, 251, 1);

    }

    .btnseemore:active {
        border: none;
    }

    .btn-see {
        text-decoration: none;
        border: 1px solid #7160F8;
        position: relative;
        background-color: #000;
        overflow: hidden;
        font-size: 1.1rem;
        padding: 0.6rem 2rem;
        color: #fff;
        text-transform: uppercase;
        border-radius: 10px;
        font-family: 'Russo One', sans-serif;
        letter-spacing: 0.15rem;
    }

    .btn-see:hover {
        box-shadow: 1px 1px 10px 3px #7160F8;
    }

    .btn-see:before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(120deg,
                transparent,
                /* rgb(103, 77, 197), */
                silver,
                transparent);
        transition: all 650ms;
    }

    .btn-see:hover:before {
        left: 100%;
    }

    .btn-see:active {
        border: none;
    }

    @keyframes pulse-red {
        0% {
            transform: scale(0.9);
            box-shadow: 0 0 0 0 rgba(166, 155, 251, 1);
        }

        70% {
            transform: scale(1);
            box-shadow: 0 0 0 10px rgba(255, 82, 82, 0);
        }

        100% {
            transform: scale(0.9);
            box-shadow: 0 0 0 0 rgba(255, 82, 82, 0);
        }
    }
    .content-divider {
            height: 0.5rem;
            background: linear-gradient(to left,
                    #7160F8,
                    rgb(230, 234, 247),
                    #7160F8);
    }
</style>

<body>
    <!-- header -->
    <header id="header">
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mobileNav"
                    aria-controls="navbarNav" aria-expanded="true" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon burger-custom"><img src="/images/burger2.png" alt=""
