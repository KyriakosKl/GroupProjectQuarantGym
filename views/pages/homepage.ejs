                                <!-- end of chat circle -->
                                <img src="/images/chatIcon.png" alt="" class="image">
                            </div>
                        </a>
                    </div>
                    <!-- end of chat -->

                    <!-- Optional JavaScript -->
                    <script src="myscript.js"></script>
                    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
