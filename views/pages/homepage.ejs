                            <span class="title-promo">20%</span>
                            <h4 class="text-2">Discount + free trainings!</h4>
                            <a href="memberships/special/<%=req.session.user.hash%>"><button
                                    class="btn-get-it"><span>Get it now</span></button></a>
                        </div>
                    </div>
                </section>
                <!-- end of special offer banner -->
                <% } %>

                    <!-- footer -->
                    <section class="pb-1" id="contact">
                        <div class="container">

                            <div class="row">

                                <div class="col-md-4 px-3 text-center my-5 pt-3">
                                    <img src="/images/main-logo.jpg" class="img-fluid mb-3" alt="company image"
                                        width="150px" />

                                    <div class="col text-center">
                                        <h2 class="display-5 text-uppercase text-white my-4 h2title">
                                            <strong>follow us on</strong>
                                        </h2>
                                        <div class="row">
                                            <div class="col text-center">
                                                <a href="https://www.facebook.com/" class="btn">
                                                    <img src="/images/facebook.png" alt="" width="30rem">
                                                </a>
                                                <a href="https://www.instagram.com/" class="btn">
                                                    <img src="/images/instagram.png" alt="" width="30rem">
                                                </a>
                                                <a href="https://twitter.com/" class="btn">
                                                    <img src="/images/twitter.png" alt="" width="30rem">
                                                </a>
