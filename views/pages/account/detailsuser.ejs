    <style>
        body {
            background: url('/assets/images/MicrosoftTeams-image\ \(1\).png') center/cover no-repeat fixed;
        }

        #exampleFormControlTextarea1 {
            resize: none;
        }

        .cancel {
            background-color: #fff;
            color: rgba(214, 79, 78, 1);
            font-size: 20px;
            padding: 3px 10px;
            border-radius: 12px;
            border: 1.5px solid rgba(214, 79, 78, 1);
            transition: 0.3s ease-in-out;
        }

        .cancel:hover {
            color: white;
            background-color: rgba(214, 79, 78, 1);
        }

        .submitok {
            color: #fff;
            background-color: rgba(18, 160, 136, 1);
            font-size: 20px;
            padding: 5px 15px;
            border-radius: 12px;
            border: 1.5px solid rgba(18, 160, 136, 1);
            transition: 0.3s ease-in-out;
        }

        .submitok:hover {
            background-color: rgba(24, 180, 153, 1);
            border: 1.5px solid rgba(24, 180, 153, 1);
            color: #fff;
        }

        .upgrd {
            color: #fff;
            background-color: rgb(191, 161, 41);
            border: 1.5px solid rgb(177, 147, 27);

            font-size: 20px;
            padding: 5px 15px;
            border-radius: 12px;

            transition: 0.3s ease-in-out;
        }

        .upgrd:hover {
            background-color: rgb(210, 181, 69);
            border: 1.5px solid rgb(210, 181, 69);
        }
    </style>
