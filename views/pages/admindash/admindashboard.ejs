        background-color: #000;
        font-family: 'Open Sans', sans-serif;
        font-weight: 300;
    }

    .megawrap {
        background-color: #fff;
    }

    span {
        padding: 0 8px;
    }

    h1 {
        font-family: 'Open Sans', sans-serif;
        font-weight: 600;
        background-color: #000;
        padding: 30px 20px;
        color: #fff;
        text-align: center;
    }

    h3 {
        padding-bottom: 20px 0;
